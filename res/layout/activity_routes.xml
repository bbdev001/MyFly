<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5sp"
    tools:context="com.my.fly.RoutesActivity" >

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/linearLayoutLeft1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.75"
            android:baselineAligned="false"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.15"
                android:orientation="vertical" >

                <ListView
                    android:id="@+id/routes"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" >
                </ListView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.85"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/routeAdd"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="OnAddRoute"
                    android:padding="0dp"
                    android:text="+" />

                <Button
                    android:id="@+id/routeDel"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="OnDelRoute"
                    android:padding="0dp"
                    android:text="-" />

                <Button
                    android:id="@+id/routeEdit"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:onClick="OnEditRoute"
                    android:padding="0dp"
                    android:text="Edit" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutLeft2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/mapSurface"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.15" >
            </FrameLayout>

            <LinearLayout
                android:id="@+id/routeControl"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_weight="0.85"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/startRoute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="OnStartRoute"
                    android:src="@android:drawable/ic_media_play" />

                <ImageButton
                    android:id="@+id/pauseRoute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="OnPauseRoute"
                    android:src="@android:drawable/ic_media_pause" />

                <ImageButton
                    android:id="@+id/stopRoute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="OnStopRoute"
                    android:src="@android:drawable/ic_menu_close_clear_cancel" />

                <ImageButton
                    android:id="@+id/goHome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="OnGoHome"
                    android:src="@android:drawable/ic_menu_myplaces" />

                <ImageButton
                    android:id="@+id/takePhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="OnTakePhoto"
                    android:src="@android:drawable/ic_menu_camera" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <Space
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.75" />

        <LinearLayout
            android:id="@+id/linearLayoutLeft4"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:orientation="vertical" >

            <com.my.fly.RouteView
                android:id="@+id/routeView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.15"
                android:background="@android:color/transparent"
                android:textColor="#ffffff" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.85" />
        </LinearLayout>
    </LinearLayout>

    <RadioGroup
        android:id="@+id/routeType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal = "true"
        android:orientation="horizontal"
        android:paddingRight="8dp" >

        <RadioButton
            android:id="@+id/routeTypeRouting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="OnRouteTypeChanged"
            android:text="Routing"
            android:textSize="11dp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/routeTypeMapping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="OnRouteTypeChanged"
            android:text="Mapping"
            android:textSize="11dp"
            android:textStyle="bold" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:orientation="horizontal" >

        <Space
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.75" />

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.25"
            android:baselineAligned="false"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/wayPointEditor"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.15" >

                <SeekBar
                    android:id="@+id/tracker"
                    android:layout_width="fill_parent"
                    android:layout_height="35sp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="100sp"
                    android:background="@android:color/transparent" />

                <LinearLayout
                    android:id="@+id/wayPointFields"
                    android:layout_width="100sp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="80sp"
                    android:background="#1faaaaaa"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/altitudeCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="15sp"
                        android:padding="2sp"
                        android:text="Altitude (m)"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="8sp" />

                    <EditText
                        android:id="@+id/altitude"
                        android:layout_width="fill_parent"
                        android:layout_height="17sp"
                        android:editable="false"
                        android:hint="Altitude (m)"
                        android:padding="2sp"
                        android:textSize="10sp" >
                    </EditText>

                    <TextView
                        android:id="@+id/headingCaption"
                        android:layout_width="wrap_content"
                        android:layout_height="15sp"
                        android:padding="2sp"
                        android:text="Heading (deg 0-359)"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="8sp" />

                    <EditText
                        android:id="@+id/heading"
                        android:layout_width="fill_parent"
                        android:layout_height="17sp"
                        android:editable="false"
                        android:hint="Heading (deg 0-359)"
                        android:padding="2sp"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/camAnglecaption"
                        android:layout_width="wrap_content"
                        android:layout_height="15sp"
                        android:padding="2sp"
                        android:text="Cam angle (deg 0-89)"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textSize="8sp" />

                    <EditText
                        android:id="@+id/camAngle"
                        android:layout_width="fill_parent"
                        android:layout_height="17sp"
                        android:editable="false"
                        android:hint="Cam angle (deg 0-89)"
                        android:padding="2sp"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>

            <Space
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.85" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/djiSurfaceViewLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:baselineAligned="false" >

        <dji.sdk.widget.DjiGLSurfaceView
            android:id="@+id/djiSurfaceView"
            android:layout_width="133sp"
            android:layout_height="75sp"
            android:clickable="true"
            android:onClick="VideoPreviewOnClick"
            android:padding="0dp" />
    </RelativeLayout>

</RelativeLayout>